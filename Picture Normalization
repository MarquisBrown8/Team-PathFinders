from PIL import Image
import os
import matplotlib.pyplot as plt

def resize_images(folder, size=(224, 224)):
    if not os.path.exists(folder):
        print(f"Folder not found: {folder}")
        return
    
    print(f"Resizing images in: {folder}")
    
    for file in os.listdir(folder):
        if file.lower().endswith((".jpg", ".jpeg", ".png")):
            path = os.path.join(folder, file)
            try:
                print(f"Processing: {file}")
                img = Image.open(path).convert("RGB")
                
                # Display the image inline in Jupyter Notebook
                plt.imshow(img)
                plt.axis('off') 
                plt.show() 
                
                # Resize the image
                img = img.resize(size)
                
                # Save the resized image back to the folder
                img.save(path)
            except Exception as e:
                print(f"Could not process {file}: {e}")


resize_images("Dataset/Dying Leaves Training")
resize_images("Dataset/Living Leaves Training")
resize_images("Dataset/Dying_Valid")
resize_images("Dataset/Living_Valid")
resize_images("Dataset/Test Images")

from PIL import Image
import os

def resize_images(folder, size=(224, 224)):
    for file in os.listdir(folder):
        if file.lower().endswith((".jpg", ".jpeg", ".png")):
            path = os.path.join(folder, file)
            img = Image.open(path).convert("RGB")
            img = img.resize(size)
            img.save(path)

resize_images("Dying Leaves Training")
resize_images("Living Leaves Training")
resize_images("Dying_Valid")
resize_images("Living_Valid")
resize_images("Test Images")
